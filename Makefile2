NAME = libft.a

SRC = ./

OBJ = $(SRC:%.c=%.o)

CFLAGS = -Wall -Wextra -Werror

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -Includes $(CFLAGS) $(OBJ) -o $(NAME)
	ar rc $(NAME) *.o 

clean:
	rm -f .

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: fclean clean all
