
NAME = libft.a

SRC = ft_atoi.o ft_strcmp.o \
		ft_strcpy.o ft_strdup.o \
		ft_strlen.o ft_strncpy.o \
		ft_strstr.o 	

OBJ = $(SRC:%.c=%.o)

CFLAGS = -Wall -Wextra -Werror -Includes

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -c $(NAME) $(SRC) $(CFLAGS) $(OBJ)
	ar rcs $(NAME) $(SRC) $?
	

clean:
	rm -f *.o

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: fclean clean all
